{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "build/default",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**",
      "database-rules.json",
      "storage.rules",
      "functions"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
