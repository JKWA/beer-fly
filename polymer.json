{
  "entrypoint": "index.html",
  "shell": "src/beer-app.html",
  "fragments": [
    "src/beer-beer.html",
    "src/beer-beer-edit.html",
    "src/beer-home2.html",
    "src/beer-contact.html",
    "src/beer-foodtrucks.html",
    "src/beer-foodtrucks-edit.html",
    "src/beer-menu.html",
    "src/beer-pub.html",
    "src/beer-tap.html",
    "src/beer-tv.html",
